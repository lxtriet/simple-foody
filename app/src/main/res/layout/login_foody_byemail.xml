<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rsz_backgroundlogin"
    tools:context=".View.Profile.Profile_LoginFoody"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Đăng nhập với Email"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:textSize="16dp"/>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="15dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/login_byemail_email"
            android:layout_marginTop="110dp"
            android:textColorHint="@color/colorArrowDown"
            android:background="@drawable/border_bottom_white"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:textSize="15dp"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/login_byemail_email"
            android:id="@+id/login_byemail_pass"
            android:inputType="textPassword"
            android:textColorHint="@color/colorArrowDown"
            android:background="@drawable/border_bottom_white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:layout_below="@+id/login_byemail_pass"
            android:id="@+id/login_byemail_login"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_white"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="Quên mật khẩu?"
            android:textColor="@color/colorWhite"
            android:textSize="13dp"
            android:id="@+id/login_byemail_forgetpass"
            android:layout_below="@+id/login_byemail_login"
            android:layout_marginTop="20dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:text="Đăng ký"
            android:id="@+id/login_byemail_signup"
            android:layout_below="@+id/login_byemail_forgetpass"
            android:layout_marginTop="35dp"
            android:gravity="center"/>

    </RelativeLayout>



</LinearLayout>