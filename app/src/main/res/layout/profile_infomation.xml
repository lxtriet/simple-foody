<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Xuân Triết"
                android:id="@+id/profile_info_nametoolbar"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:gravity="center|left"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Lưu lại"
                android:id="@+id/profile_info_save"
                android:paddingRight="15dp"
                android:textColor="@color/colorWhite"
                android:gravity="center_vertical|right"
                android:textSize="16dp"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorChangeCity"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorChangeCity"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"

                    android:background="@color/colorWhite"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Tên đăng nhập"
                        android:fontFamily="sans-serif"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        android:background="@drawable/stroke_bottom"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:background="@drawable/border_gray"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/profile_info_nameuser"
                            android:text="lxtriet"
                            android:layout_weight="1"
                            android:textSize="12dp"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:orientation="horizontal"
                    android:background="@color/colorWhite"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="12dp"
                        android:text="Tên"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/stroke_bottom"
                        android:gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:background="@drawable/border_gray">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/profile_info_firstname"
                            android:layout_weight="1"
                            android:text="Triết"
                            android:gravity="center_vertical"
                            android:textSize="12dp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:orientation="horizontal"
                    android:background="@color/colorWhite"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="12dp"
                        android:text="Họ"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/stroke_bottom"
                        android:gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:background="@drawable/border_gray"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/profile_info_lastname"
                            android:layout_weight="1"
                            android:text="Lâm"
                            android:textSize="12dp"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:orientation="horizontal"
                    android:background="@color/colorWhite"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="12dp"
                        android:text="Email"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/stroke_bottom"
                        android:gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:background="@drawable/border_gray"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/profile_info_email"
                            android:layout_weight="1"
                            android:textSize="12dp"
                            android:text="lxtriet@gmail.com"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            />
                    </LinearLayout>
                    </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:orientation="horizontal"
                    android:background="@color/colorWhite"
                    >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12dp"
                            android:text="Quản lý số điện thoại"
                            android:paddingLeft="15dp"
                            android:textColor="@color/colorTwitter"
                            android:gravity="center_vertical"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:padding="5dp"
                            android:src="@drawable/ic_chevron_right_black_24dp"/>
                    </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="vertical"
                android:id="@+id/profile_logout">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:orientation="horizontal"
                    android:background="@color/colorWhite"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="Quản lý địa chỉ"
                        android:paddingLeft="15dp"
                        android:textColor="@color/colorTwitter"
                        android:gravity="center_vertical"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:padding="5dp"
                        android:src="@drawable/ic_chevron_right_black_24dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:orientation="horizontal"
                    android:background="@color/colorWhite"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="12dp"
                        android:text="Ngày tham gia"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/stroke_bottom"
                        android:gravity="center_vertical"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:background="@drawable/border_gray"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:id="@+id/profile_info_date"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:orientation="horizontal"
                    android:background="@color/colorWhite"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="12dp"
                        android:text="Hôn nhân"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/stroke_bottom"
                        android:gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/border_gray"
                            android:padding="0dp"
                            android:clickable="true"
                            android:id="@+id/profile_info_changestatus"
                            android:layout_marginRight="5dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="10dp"
                                android:paddingRight="5dp"
                                android:id="@+id/profile_info_status"
                                android:gravity="center_vertical"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:clickable="true"
                            android:id="@+id/profile_info_changesex"
                            android:background="@drawable/border_gray"
                            android:padding="0dp"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/profile_info_sex"
                                android:layout_weight="2"
                                android:text="Nam"
                                android:layout_marginLeft="5dp"
                                android:gravity="center_vertical"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:orientation="horizontal"
                    android:background="@color/colorWhite"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="12dp"
                        android:text="Ngày sinh"
                        android:paddingLeft="15dp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        android:background="@drawable/stroke_bottom"
                        android:id="@+id/textView2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/profile_info_birthday"
                            android:layout_weight="1"
                            android:text="2/8/2017"
                            android:paddingLeft="15dp"
                            android:gravity="center_vertical"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:padding="5dp"
                            android:src="@drawable/ic_chevron_right_black_24dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>