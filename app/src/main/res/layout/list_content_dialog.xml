<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#2E2E2E"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_content_title"
        android:background="@color/colorFoody">
        <TextView
            android:gravity="center_vertical"
            android:text="Chọn thành phố"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/list_content_dialog_titlename"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
    <View
        android:background="@color/colorBlue"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <ListView
        android:id="@+id/list_content_dialog_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_weight="9">
    </ListView>
    <Button
        android:layout_margin="7dp"
        android:id="@+id/list_content_dialog_dismiss"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="BỎ QUA"
        android:textSize="14sp"
        android:background="@color/colorWhite"
        android:textColor="@color/colorTabWidget"/>

</LinearLayout>